{
	"name": "presentationbridge-client",
	"productName": "PresentationBridge Client",
	"version": "1.0.0",
	"description": "Links data from your Presentation/lyrics software to other software.",
	"license": "MIT",
	"repository": "josephdadams/presentationbridge-client",
	"author": {
		"name": "Joseph Adams",
		"email": "josephdadams@gmail.com",
		"url": "https://techministry.blog"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo",
		"test": "npm run lint",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --macos --linux --windows",
		"release": "np"
	},
	"dependencies": {
		"@popperjs/core": "^2.5.4",
		"axios": "^0.20.0",
		"bootstrap": "^4.5.2",
		"electron-context-menu": "^0.15.0",
		"electron-debug": "^3.0.0",
		"electron-store": "^5.1.0",
		"electron-unhandled": "^3.0.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.13.0",
		"jquery": "^3.5.1",
		"mdns-js": "^1.0.3",
		"socket.io-client": "^2.3.1",
		"ws": "^7.3.1"
	},
	"devDependencies": {
		"electron": "^7.1.1",
		"electron-builder": "^21.2.0",
		"np": "^5.0.3",
		"xo": "^0.25.3"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		]
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.techministry.presentationbridgeclient",
		"mac": {
			"category": "public.app-category.social-networking",
			"darkModeSupport": true
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Network;Chat"
		}
	}
}
